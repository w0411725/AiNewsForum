@model AiForum.Models.Discussion
@{
    ViewData["Title"] = "Delete Discussion";
}
<div class="container">
    <h1 class="text-danger fw-bold">Are you sure you want to delete this discussion?</h1>
    <hr class="mb-4" />
    <div class="p-4 border rounded shadow bg-light">
        <h4 class="fw-bold">Discussion Details</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 fw-bold">Content</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

            <dt class="col-sm-3 fw-bold">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageFilename))
                {
                    <img src="~/images/@Model.ImageFilename" alt="Discussion Image" class="img-fluid rounded" width="200" />
                }
                else
                {
                    <span>No image uploaded</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold">Created At</dt>
            <dd class="col-sm-9">@Model.CreateDate.ToString("f")</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="DiscussionId" />
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>
