@model AiForum.Models.Discussion
@{
    ViewData["Title"] = "Edit Discussion";
}
<div class="container">
    <h1 class="text-primary fw-bold">Edit Discussion</h1>
    <hr class="mb-4" />
    <form asp-action="Edit" method="post" class="p-4 border rounded shadow bg-light">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="DiscussionId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold">Title</label>
            <input asp-for="Title" class="form-control shadow-sm" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label fw-bold">Content</label>
            <textarea asp-for="Content" class="form-control shadow-sm" rows="4" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFilename" class="form-label fw-bold">Current Image</label>
            <input asp-for="ImageFilename" class="form-control shadow-sm" readonly />
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label fw-bold">Upload New Image</label>
            <input type="file" name="ImageFile" class="form-control shadow-sm" />
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to Discussions</a>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
