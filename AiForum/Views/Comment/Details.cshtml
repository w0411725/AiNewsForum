@model AiForum.Models.Comment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comment Details</title>
</head>
<body>

    <div>
        <h4>Comment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>

            <dt class="col-sm-2">Created At</dt>
            <dd class="col-sm-10">@Model.CreateDate.ToString("f")</dd>

            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">
                @(Model.User?.UserName ?? "Anonymous")
            </dd>

            <dt class="col-sm-2">Discussion</dt>
            <dd class="col-sm-10">
                <a asp-action="Details" asp-controller="Discussion" asp-route-id="@Model.DiscussionId">
                    @Html.DisplayFor(model => model.Discussion.Title)
                </a>
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.CommentId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
